@model Web.Models.SchoolViewModel

@{
    ViewData["Title"] = "Detalls de l'Escola";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building"></i> Detalls de l'Escola</h2>
        <div id="headerButtons">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Tornar
            </a>
            <button id="editButton" type="button" class="btn btn-warning ms-2">
                <i class="bi bi-pencil"></i> Editar
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form id="editForm" asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Code" />
                
                <div id="errorAlert" class="alert alert-danger alert-dismissible fade show alert-hidden" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> <span id="errorMessage">Si us plau, omple tots els camps obligatoris correctament.</span>
                    <button type="button" class="btn-close" data-action="close-alert"></button>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Codi</label>
                        <input type="text" class="form-control bg-secondary bg-opacity-10" value="@Model.Code" readonly disabled />
                        <small class="form-text text-muted">El codi no es pot modificar</small>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ciutat <span class="text-danger edit-only">*</span></label>
                        <input type="text" id="City" name="City" class="form-control" value="@Model.City" readonly required />
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Nom <span class="text-danger edit-only">*</span></label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" readonly required />
                </div>
                
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Àmbit</label>
                        <select id="ScopeId" name="ScopeId" class="form-select" disabled>
                            <option value="">-- Selecciona un àmbit --</option>
                            @{
                                var scopes = ViewBag.Scopes as List<Web.Models.SelectOption> ?? new List<Web.Models.SelectOption>();
                                foreach (var scope in scopes)
                                {
                                    var selected = Model.ScopeId.HasValue && scope.Value == Model.ScopeId.Value.ToString();
                                    if (selected)
                                    {
                                        <option value="@scope.Value" selected="selected">@scope.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@scope.Value">@scope.Text</option>
                                    }
                                }
                            }
                        </select>
                        <div class="invalid-feedback">Àmbit és obligatori</div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Favorita</label>
                        <div class="form-control bg-light d-flex align-items-center form-control-display" id="favoriteDisplay">
                            @if (Model.IsFavorite)
                            {
                                <span class="star-icon star-filled">★</span>
                                <span class="ms-2">Sí</span>
                            }
                            else
                            {
                                <span class="star-icon star-outline">★</span>
                                <span class="ms-2">No</span>
                            }
                        </div>
                        <div class="form-check mt-2" id="favoriteEdit">
                            <input type="checkbox" id="IsFavorite" name="IsFavorite" value="true" class="form-check-input" @(Model.IsFavorite ? "checked" : "") />
                            <label class="form-check-label" for="IsFavorite">
                                Favorita <span class="star-icon star-filled">★</span>
                            </label>
                        </div>
                        
                        <!-- Save/Cancel partial removed from here and moved to bottom of form -->
                        
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Data de creació</label>
                    <input type="text" class="form-control bg-secondary bg-opacity-10" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly disabled />
                </div>
                @{
                    var options = new {
                        submitText = "Guardar",
                        cancelText = "Cancel·lar",
                        cancelAction = "reload",
                        cancelHref = Url.Action("Index"),
                        disabledByDefault = true,
                        privacySelector = "#AgreesToPrivacy"
                    };
                }
                <div id="saveCancelWrapper" style="display:none" class="mt-3 d-flex justify-content-end">
                    @Html.Partial("_SaveCancelButtons", options)
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="~/css/details.css" />
    <script src="~/js/save-cancel-buttons.js"></script>
    <script src="~/js/schools-details.js"></script>
}
