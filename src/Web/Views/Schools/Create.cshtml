@model Web.Models.SchoolViewModel

@{
    ViewData["Title"] = "Nova Escola";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="bi bi-building"></i> Crear Nova Escola
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Code" class="form-label"></label>
                                <input asp-for="Code" class="form-control" placeholder="Ex: ESC001" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label"></label>
                                <input asp-for="City" class="form-control" placeholder="Ex: Barcelona" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ex: Institut Joan XXIII" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="ScopeId" class="form-label">Àmbit</label>
                                <select asp-for="ScopeId" class="form-select">
                                    <option value="">-- Selecciona un àmbit --</option>
                                    @{
                                        var scopes = ViewBag.Scopes as List<Web.Models.SelectOption> ?? new List<Web.Models.SelectOption>();
                                        foreach (var scope in scopes)
                                        {
                                            var selected = Model.ScopeId.HasValue && scope.Value == Model.ScopeId.Value.ToString();
                                            if (selected)
                                            {
                                                <option value="@scope.Value" selected="selected">@scope.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@scope.Value">@scope.Text</option>
                                            }
                                        }
                                    }
                                </select>
                                <span asp-validation-for="ScopeId" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label class="form-label d-block">&nbsp;</label>
                                <div class="form-check">
                                    <input asp-for="IsFavorite" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsFavorite" class="form-check-label">
                                        Marcar com a favorita <span class="star-icon star-filled">★</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-4">
                            @{ 
                                var opts = new {
                                    submitText = "Crear Escola",
                                    submitClass = "btn btn-primary",
                                    cancelText = "Cancel·lar",
                                    cancelClass = "btn btn-secondary",
                                    cancelHref = Url.Action("Index"),
                                    privacySelector = "#AgreesToPrivacy",
                                    disabledByDefault = true
                                };
                            }
                            @Html.Partial("_SaveCancelButtons", System.Text.Json.JsonSerializer.Serialize(opts))
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
