@model Web.Models.SchoolViewModel

@{
    ViewData["Title"] = "Editar Escola";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil"></i> Editar Escola</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Tornar
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Code" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Codi</label>
                        <input type="text" class="form-control bg-light" value="@Model.Code" readonly disabled />
                        <small class="form-text text-muted">El codi no es pot modificar</small>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="City" class="form-label">Ciutat <span class="text-danger">*</span></label>
                        <input asp-for="City" class="form-control" placeholder="Ex: Barcelona" maxlength="100" required />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nom <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Nom de l'escola" maxlength="200" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label asp-for="Scope" class="form-label">Àmbit</label>
                        <select asp-for="Scope" class="form-select">
                            <option value="">-- Selecciona un àmbit --</option>
                            <option value="Infantil">Infantil</option>
                            <option value="Primària">Primària</option>
                            <option value="Infantil i Primària">Infantil i Primària</option>
                            <option value="Secundària">Secundària</option>
                            <option value="Batxillerat">Batxillerat</option>
                            <option value="FP">FP</option>
                        </select>
                        <span asp-validation-for="Scope" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label d-block">&nbsp;</label>
                        <div class="form-check">
                            <input asp-for="IsFavorite" class="form-check-input" type="checkbox" />
                            <label asp-for="IsFavorite" class="form-check-label">
                                Favorita <span class="star-icon star-filled">★</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Tornar
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Guardar Canvis
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
