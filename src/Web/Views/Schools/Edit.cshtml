@model Web.Models.SchoolViewModel

@{
    ViewData["Title"] = "Editar Escola";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil"></i> Editar Escola</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Tornar
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Code" class="form-label">Codi <span class="text-danger">*</span></label>
                        <input asp-for="Code" class="form-control" placeholder="Ex: 08001234" maxlength="20" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="City" class="form-label">Ciutat <span class="text-danger">*</span></label>
                        <input asp-for="City" class="form-control" placeholder="Ex: Barcelona" maxlength="100" required />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nom <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" placeholder="Nom de l'escola" maxlength="200" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label asp-for="ScopeId" class="form-label">Àmbit</label>
                        <select asp-for="ScopeId" class="form-select">
                            <option value="">-- Selecciona un àmbit --</option>
                            @{
                                var scopes = ViewBag.Scopes as List<Web.Models.SelectOption> ?? new List<Web.Models.SelectOption>();
                                foreach (var scope in scopes)
                                {
                                    var selected = Model.ScopeId.HasValue && scope.Value == Model.ScopeId.Value.ToString();
                                    if (selected)
                                    {
                                        <option value="@scope.Value" selected="selected">@scope.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@scope.Value">@scope.Text</option>
                                    }
                                }
                            }
                        </select>
                        <span asp-validation-for="ScopeId" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label d-block">&nbsp;</label>
                        <div class="form-check">
                            <input asp-for="IsFavorite" class="form-check-input" type="checkbox" />
                            <label asp-for="IsFavorite" class="form-check-label">
                                Favorita <span class="star-icon star-filled">★</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Tornar
                    </a>
                        @{ 
                            var opts = new {
                                submitText = "Guardar",
                                submitClass = "btn btn-primary",
                                cancelText = "Tornar",
                                cancelClass = "btn btn-secondary",
                                cancelHref = Url.Action("Index"),
                                privacySelector = "#AgreesToPrivacy",
                                disabledByDefault = true
                            };
                        }
                        @Html.Partial("_SaveCancelButtons", System.Text.Json.JsonSerializer.Serialize(opts))
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
}
