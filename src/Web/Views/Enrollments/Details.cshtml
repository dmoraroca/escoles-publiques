@model Web.Models.EnrollmentViewModel

@{
    ViewData["Title"] = "Detalls de la Inscripció";
    var students = ViewBag.Students as IEnumerable<Web.Models.StudentViewModel> ?? new List<Web.Models.StudentViewModel>();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-journal-text"></i> Detalls de la Inscripció</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Tornar
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Alumne <span class="text-danger">*</span></label>
                <div class="form-control" style="background-color: #e9ecef;">@Model.StudentName</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Escola <span class="text-danger">*</span></label>
                <div class="form-control" style="background-color: #e9ecef;">@Model.SchoolName</div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Curs Acadèmic <span class="text-danger">*</span></label>
                    <div class="form-control" style="background-color: #e9ecef;">@Model.AcademicYear</div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Nom del Curs</label>
                    <div class="form-control" style="background-color: #e9ecef;">@Model.CourseName</div>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Estat <span class="text-danger">*</span></label>
                    <div class="form-control" style="background-color: #e9ecef;">@Model.Status</div>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Data d'Inscripció</label>
                <div class="form-control" style="background-color: #e9ecef;">@Model.EnrolledAt.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        </div>
    </div>
</div>


