@model Web.Models.EnrollmentViewModel

@{
    ViewData["Title"] = "Detalls de la Matrícula";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-journal-text"></i> Detalls de la Matrícula</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Tornar
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label class="form-label">Alumne</label>
                    <input type="text" class="form-control bg-light" value="@Model.StudentName" readonly />
                </div>
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Any Acadèmic</label>
                        <input type="text" class="form-control bg-light" value="@Model.AcademicYear" readonly />
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Curs</label>
                        <input type="text" class="form-control bg-light" value="@(Model.CourseName ?? "-")" readonly />
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Estat</label>
                        <input type="text" class="form-control bg-light" value="@Model.Status" readonly />
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Data de Matrícula</label>
                    <input type="text" class="form-control bg-light" value="@Model.EnrolledAt.ToString("dd/MM/yyyy HH:mm")" readonly />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Tancar
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
