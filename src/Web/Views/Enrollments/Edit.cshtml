@model Web.Models.EnrollmentViewModel

@{
    ViewData["Title"] = Localizer["Editar Inscripció"];
    var schools = ViewBag.Schools as IEnumerable<Web.Models.SchoolViewModel> ?? new List<Web.Models.SchoolViewModel>();
}



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-pencil"></i> @Localizer["Edició de la Inscripció"]</h2>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="Year" />
                <input type="hidden" asp-for="SchoolId" />

                <div class="mb-3">
                    <label class="form-label">@Localizer["Alumne"] <span class="text-danger">*</span></label>
                    <input type="text" class="form-control bg-secondary bg-opacity-10" asp-for="StudentName" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">@Localizer["Escola"] <span class="text-danger">*</span></label>
                    <input type="text" class="form-control bg-secondary bg-opacity-10" value="@Model.SchoolName" readonly />
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">@Localizer["Curs Acadèmic"] <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" asp-for="AcademicYear" required />
                        <span asp-validation-for="AcademicYear" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="CourseName" class="form-label">@Localizer["Nom del Curs"]</label>
                        <input type="text" class="form-control" asp-for="CourseName" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Status" class="form-label">@Localizer["Estat"] <span class="text-danger">*</span></label>
                        <select asp-for="Status" class="form-select" required>
                            <option value="">@Localizer["-- Selecciona un estat --"]</option>
                            <option value="Activa">@Localizer["Activa"]</option>
                            <option value="Pendent">@Localizer["Pendent"]</option>
                            <option value="Cancel·lada">@Localizer["Cancel·lada"]</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="EnrolledAt" class="form-label">@Localizer["Data d'Inscripció"] <span class="text-danger">*</span></label>
                    <input asp-for="EnrolledAt" class="form-control" type="datetime-local" value="@Model.EnrolledAt.ToString("yyyy-MM-ddTHH:mm")" required />
                    <span asp-validation-for="EnrolledAt" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    @{
                        var opts = new
                        {
                            submitText = Localizer["Guardar"].Value,
                            submitClass = "btn btn-primary",
                            cancelText = Localizer["Cancel·lar"].Value,
                            cancelClass = "btn btn-secondary",
                            cancelHref = Url.Action("Details", new { id = Model.Id }),
                            privacySelector = "#AgreesToPrivacy",
                            disabledByDefault = true
                        };
                    }
                    @await Html.PartialAsync("_SaveCancelButtons", System.Text.Json.JsonSerializer.Serialize(opts))
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
