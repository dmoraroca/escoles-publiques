@model Web.Controllers.ManualController.ManualViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h1 class="h3 mb-0">@Model.Title</h1>
        <div class="d-flex gap-2">
            <a class="btn btn-sm btn-outline-secondary" href="/manual/ca">CA</a>
            <a class="btn btn-sm btn-outline-secondary" href="/manual/es">ES</a>
            <a class="btn btn-sm btn-outline-secondary" href="/manual/en">EN</a>
            <a class="btn btn-sm btn-outline-secondary" href="/manual/de">DE</a>
        </div>
    </div>

    <div class="manual-content">
        @Html.Raw(Model.Html)
    </div>
</div>

<style>
    .manual-content img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 1rem auto;
        border: 1px solid #e5e5e5;
        box-shadow: 0 1px 6px rgba(0,0,0,0.08);
        border-radius: 6px;
    }
    .manual-content pre {
        padding: 0.75rem 1rem;
        background: #0b1020;
        color: #e7e7e7;
        border-radius: 8px;
        overflow-x: auto;
    }
    .manual-content code {
        background: rgba(0,0,0,0.06);
        padding: 0.1rem 0.25rem;
        border-radius: 4px;
    }
    .manual-content pre code {
        background: transparent;
        padding: 0;
    }
</style>

