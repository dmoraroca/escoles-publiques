<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Departament d'Educació</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/css/gencat-theme.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column h-100">
    <header>
        <div class="header-top-black py-2">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <img src="https://educacio.gencat.cat/web/resources/fwkResponsive/fpca_capcalera/img/gencat-nuevo-completo-w.svg" alt="gencat" height="25">
                </div>
                <div class="small text-white d-none d-md-block">
                    <span>Contacte</span> | <span>CA</span> | <span class="ml-2">🔍</span>
                </div>
            </div>
        </div>

        <div class="header-dept-bar py-3">
            <div class="container">
                <h1 class="h4 mb-0 font-weight-bold text-white">Departament d'Educació i Formació Professional</h1>
            </div>
        </div>

        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom p-0">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    @{
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                    }
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Home" asp-action="Index">Inici</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Schools", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Schools" asp-action="Index">Escoles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Students", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Students" asp-action="Index">Alumnes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Enrollments", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Enrollments" asp-action="Index">Inscripcions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-gencat @(string.Equals(currentController, "AnnualFees", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="AnnualFees" asp-action="Index">Quotes</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tancar"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tancar"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-4 bg-light border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-muted small">
                    &copy; 2026 - <strong>Generalitat de Catalunya</strong>
                </div>
                <div class="col-md-6 text-md-end small">
                    <a href="#" class="text-muted text-decoration-none">Accessibilitat</a> | 
                    <a href="#" class="text-muted text-decoration-none">Mapa web</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@@latest/dist/browser/signalr.min.js"></script>
    
    <!-- SignalR Global Scripts -->
    <script>
        // Connexió SignalR global per actualitzacions en temps real
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/schoolHub")
            .withAutomaticReconnect()
            .build();

        // Funció per recarregar la pàgina actual
        function reloadCurrentPage() {
            console.log('🔄 Recàrrega automàtica per canvis detectats...');
            setTimeout(() => location.reload(), 1000);
        }

        // Esdeveniment: nova escola creada
        connection.on("SchoolCreated", function (school) {
            console.log('✅ Nova escola creada:', school.name);
            
            // Si estem a la pàgina d'escoles, recarreguem
            if (window.location.pathname.includes('/Schools')) {
                reloadCurrentPage();
            }
        });

        // Esdeveniment: escola actualitzada
        connection.on("SchoolUpdated", function (school) {
            console.log('🔄 Escola actualitzada:', school.name);
            
            // Si estem a la pàgina d'escoles, recarreguem
            if (window.location.pathname.includes('/Schools')) {
                reloadCurrentPage();
            }
        });

        // Esdeveniment: escola esborrada
        connection.on("SchoolDeleted", function (data) {
            console.log('🗑️ Escola esborrada amb ID:', data.id);
            
            // Si estem a la pàgina d'escoles, recarreguem
            if (window.location.pathname.includes('/Schools')) {
                reloadCurrentPage();
            }
        });

        // Iniciar connexió SignalR
        connection.start()
            .then(() => console.log('✅ SignalR connectat correctament'))
            .catch(err => console.error('❌ Error connectant SignalR:', err));

        // Reconnexió automàtica
        connection.onreconnecting(() => console.log('🔄 Reconnectant SignalR...'));
        connection.onreconnected(() => console.log('✅ SignalR reconnectat'));
        connection.onclose(() => console.log('❌ Connexió SignalR tancada'));
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>