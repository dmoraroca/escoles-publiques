<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Departament d'Educació i Formació Professional</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/css/gencat-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/details-pages.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column h-100">
    <header>
        <div class="header-top-black py-2">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <img src="https://educacio.gencat.cat/web/resources/fwkResponsive/fpca_capcalera/img/gencat-nuevo-completo-w.svg" alt="gencat" height="25">
                </div>
                <div class="d-flex align-items-center gap-3">
                                            <span class="text-warning small">Rol detectat: @User.FindFirst("Role")?.Value</span>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-white small">
                            <i class="bi bi-person-circle"></i> @(User.FindFirst("FullName")?.Value ?? User.Identity.Name ?? "Usuari")
                        </span>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-light">
                                <i class="bi bi-box-arrow-right"></i> Sortir
                            </button>
                        </form>
                    }
                    else
                    {
                        <span class="small text-white">Contacte | CA | 🔍</span>
                    }
                </div>
            </div>
        </div>

        <div class="header-dept-bar py-3">
            <div class="container">
                <h1 class="h4 mb-0 font-weight-bold text-white">Departament d'Educació i Formació Professional</h1>
            </div>
        </div>

        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom p-0">
            <div class="container">
                @if (User.FindFirst("Role")?.Value == "ADM")
                {
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse" id="navbarNav">
                        @{
                            var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
                        }
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Home", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Home" asp-action="Index">Inici</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Schools", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Schools" asp-action="Index">Escoles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Students", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Students" asp-action="Index">Alumnes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-gencat @(string.Equals(currentController, "Enrollments", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="Enrollments" asp-action="Index">Inscripcions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav-link-gencat @(string.Equals(currentController, "AnnualFees", StringComparison.OrdinalIgnoreCase) ? "active" : "")" asp-controller="AnnualFees" asp-action="Index">Quotes</a>
                            </li>
                        </ul>
                    </div>
                }
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tancar"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tancar"></button>
                </div>
            }
            
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-4 bg-light border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-muted small">
                    &copy; 2026 - <strong>Generalitat de Catalunya</strong>
                </div>
                <div class="col-md-6 text-md-end small">
                    <a href="#" class="text-muted text-decoration-none">Accessibilitat</a> | 
                    <a href="#" class="text-muted text-decoration-none">Mapa web</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@@latest/dist/browser/signalr.min.js"></script>
    <script src="~/js/signalr-connection.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>