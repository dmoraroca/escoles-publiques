@model Web.Models.EntityModalConfig

@{
    var localizedEntityName = Localizer[Model.EntityName].Value;
}
<div class="modal fade" id="@Model.ModalId" data-modal-id="@Model.ModalId" data-entity-name="@localizedEntityName" tabindex="-1" aria-labelledby="@(Model.ModalId)Label" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="@Model.Controller" asp-action="Create" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="@(Model.ModalId)Label">
                        <i class="bi @Model.IconClass"></i> @Localizer["Crear {0}", localizedEntityName]
                    </h5>
                </div>
                <div class="modal-body">
                    <!-- Zona d'alertes per errors de validació -->
                    <div class="alert alert-danger d-none" role="alert" id="@(Model.ModalId)-error">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span id="@(Model.ModalId)-error-message">@Localizer["Si us plau, omple tots els camps obligatoris correctament."]</span>
                    </div>
                    
                    <div class="row"> 
                        @foreach (var field in Model.Fields)
                        {
                            <div class="col-md-@field.ColumnSize mb-3">
                                @{
                                    var localizedFieldLabel = Localizer[field.Label].Value;
                                    var localizedPlaceholder = string.IsNullOrWhiteSpace(field.Placeholder)
                                        ? field.Placeholder
                                        : Localizer[field.Placeholder].Value;
                                }
                                @if (field.Type == "checkbox")
                                {
                                    <label class="form-label d-block">@localizedFieldLabel</label>
                                    <div class="form-check">
                                        <input class="form-check-input" 
                                               type="checkbox" 
                                               id="@field.Name" 
                                               name="@field.Name" 
                                               value="true" />
                                        <label class="form-check-label" for="@field.Name">
                                            @localizedFieldLabel
                                            @if (field.Name == "IsFavorite")
                                            {
                                                <span class="star-icon star-filled">★</span>
                                            }
                                        </label>
                                    </div>
                                }
                                else if (field.Type == "select")
                                {
                                    <label for="@field.Name" class="form-label">
                                        @localizedFieldLabel @if (field.Required) { <span class="text-danger">*</span> }
                                    </label>
                                    <select class="form-select" 
                                            id="@field.Name" 
                                            name="@field.Name"
                                            @(field.Required ? "required" : "")>
                                        <option value="">@Localizer["-- Selecciona {0} --", localizedFieldLabel]</option>
                                        @if (field.Options != null)
                                        {
                                            @foreach (var option in field.Options)
                                            {
                                                <option value="@option.Value">@Localizer[option.Text]</option>
                                            }
                                        }
                                    </select>
                                    @if (field.Required)
                                    {
                                        <div class="invalid-feedback">@Localizer["{0} és obligatori", localizedFieldLabel]</div>
                                    }
                                }
                                else if (field.Type == "date")
                                {
                                    <label for="@field.Name" class="form-label">
                                        @localizedFieldLabel @if (field.Required) { <span class="text-danger">*</span> }
                                    </label>
                                    <input type="date" 
                                           class="form-control" 
                                           id="@field.Name" 
                                           name="@field.Name"
                                           @(field.Required ? "required" : "")
                                           placeholder="@localizedPlaceholder" />
                                    @if (field.Required)
                                    {
                                        <div class="invalid-feedback">@Localizer["{0} és obligatori", localizedFieldLabel]</div>
                                    }
                                }
                                else if (field.Type == "number")
                                {
                                    <label for="@field.Name" class="form-label">
                                        @localizedFieldLabel @if (field.Required) { <span class="text-danger">*</span> }
                                    </label>
                                    <input type="number" 
                                           class="form-control" 
                                           id="@field.Name" 
                                           name="@field.Name"
                                           @(field.Required ? "required" : "")
                                           placeholder="@localizedPlaceholder" />
                                    @if (field.Required)
                                    {
                                        <div class="invalid-feedback">@Localizer["{0} és obligatori", localizedFieldLabel]</div>
                                    }
                                }
                                else
                                {
                                    <label for="@field.Name" class="form-label">
                                        @localizedFieldLabel @if (field.Required) { <span class="text-danger">*</span> }
                                    </label>
                                    <input type="@field.Type" 
                                           class="form-control" 
                                           id="@field.Name" 
                                           name="@field.Name"
                                           @(field.Required ? "required" : "")
                                           @(field.MaxLength > 0 ? $"maxlength=\"{field.MaxLength}\"" : "")
                                           placeholder="@localizedPlaceholder" />
                                    @if (field.Required)
                                    {
                                        <div class="invalid-feedback">@Localizer["{0} és obligatori", localizedFieldLabel]</div>
                                    }
                                }
                            </div>
                        }
                    </div>

                </div>
                <div class="modal-footer d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg"></i> @Localizer["Cancel·lar"]
                    </button>
                    <div class="d-flex align-items-center gap-3">
                        <div class="form-check mb-0">
                            <input class="form-check-input js-privacy-check" type="checkbox" id="@(Model.ModalId)-AgreesToPrivacy" name="AgreesToPrivacy" value="true" />
                            <label class="form-check-label small" for="@(Model.ModalId)-AgreesToPrivacy">
                                @Localizer["Accepto les"] <a asp-controller="Home" asp-action="Privacy">@Localizer["condicions de privacitat"]</a>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> @Localizer["Crear {0}", localizedEntityName]
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/entity-modal.js"></script>
