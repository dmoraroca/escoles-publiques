@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["Accés - GICAR"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/login.css" />
    <!-- Reuse the same header/theme styles as the authenticated layout -->
    <link rel="stylesheet" href="~/css/davidgov-theme.css" asp-append-version="true" />
</head>
<body class="login-body">
    
    <!-- Capçalera com la pàgina logada -->
    <div class="header-top-black py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <a class="brand-wordmark text-decoration-none" href="/" aria-label="DavidGov">
                    DavidGov
                </a>
            </div>
            @{
                var currentPath = $"{Context.Request.PathBase}{Context.Request.Path}";
                string BuildCultureUrl(string path, string culture) =>
                    QueryHelpers.AddQueryString(path, new Dictionary<string, string?>
                    {
                        ["culture"] = culture,
                        ["ui-culture"] = culture
                    });

                var cultures = new (string Code, string Label)[]
                {
                    ("ca-ES", Localizer["CA - Català"].Value),
                    ("es-ES", Localizer["ES - Espanyol"].Value),
                    ("en-US", Localizer["EN - English"].Value),
                    ("de-DE", Localizer["DE - Deutsch"].Value),
                    ("fr-FR", Localizer["FR - Français"].Value),
                    ("ru-RU", Localizer["RU - Русский"].Value),
                    ("zh-CN", Localizer["ZH - 中文"].Value)
                };

                var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
                var ajudaManualUrl = BuildCultureUrl("/ajuda/manual", currentCulture);
                var ajudaFuncionalUrl = BuildCultureUrl("/ajuda/funcional", currentCulture);
                var ajudaTecnicUrl = BuildCultureUrl("/ajuda/tecnic", currentCulture);
            }
            <div class="d-flex align-items-center gap-3">
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" id="helpMenuButtonLogin" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-question-circle"></i> @Localizer["Ajuda"]
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="helpMenuButtonLogin">
                        <li><a class="dropdown-item" href="@ajudaManualUrl">@Localizer["Manual d'usuari"]</a></li>
                        <li><a class="dropdown-item" href="@ajudaFuncionalUrl">@Localizer["Document funcional"]</a></li>
                        <li><a class="dropdown-item" href="@ajudaTecnicUrl">@Localizer["Document tècnic"]</a></li>
                    </ul>
                </div>
                <select class="form-select form-select-sm d-inline-block w-auto"
                        aria-label="@Localizer["Idioma"]"
                        onchange="if(this.value){window.location.href=this.value;}">
                    @foreach (var c in cultures)
                    {
                        <option value="@BuildCultureUrl(currentPath, c.Code)"
                                selected="@(currentCulture.StartsWith(c.Code[..2], System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                            @c.Label
                        </option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="header-dept-bar py-3">
        <div class="container">
            <h1 class="h4 mb-0 font-weight-bold text-white">@Localizer["Departament d'Educació i Formació Professional"]</h1>
        </div>
    </div>


<div class="login-container">
    <div class="login-box">
        <div class="login-header"></div>

        <div class="login-body">
            <h1>@Localizer["Accés amb credencials corporatives"]</h1>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }

            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="email" class="form-label">
                        @Localizer["Usuari"]<span class="required">*</span>
                    </label>
                    <input type="email" class="form-control" id="email" name="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        @Localizer["Contrasenya"]<span class="required">*</span>
                    </label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <button type="submit" class="btn-login">
                    <i class="bi bi-lock-fill"></i>
                    @Localizer["Accedeix"]
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Footer amb copyright Generalitat -->
<footer class="login-footer">
    <div class="container text-center login-footer-container">
        <div class="text-muted small login-footer-muted">
            &copy; 2026 - <strong>@Localizer["Generalitat de Catalunya"]</strong> - @Localizer["Departament d'Educació i Formació Professional"]
        </div>
        <div class="text-muted small mt-1 login-footer-muted2">
            @Localizer["Tots els drets reservats"]
        </div>
    </div>
</footer>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
