@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["Accés - GICAR"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body class="login-body">
    
    <!-- Capçalera com la pàgina logada -->
    <div class="header-top-black py-2">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <a class="brand-wordmark text-decoration-none" href="/" aria-label="DavidGov">
                    DavidGov
                </a>
            </div>
            @{
                var currentPath = Context.Request.Path.HasValue ? Context.Request.Path.Value! : "/";
                var caUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "ca-ES",
                    ["ui-culture"] = "ca-ES"
                });
                var esUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "es-ES",
                    ["ui-culture"] = "es-ES"
                });
                var enUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "en-US",
                    ["ui-culture"] = "en-US"
                });
                var deUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "de-DE",
                    ["ui-culture"] = "de-DE"
                });
                var frUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "fr-FR",
                    ["ui-culture"] = "fr-FR"
                });
                var ruUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "ru-RU",
                    ["ui-culture"] = "ru-RU"
                });
                var zhUrl = QueryHelpers.AddQueryString(currentPath, new Dictionary<string, string?>
                {
                    ["culture"] = "zh-CN",
                    ["ui-culture"] = "zh-CN"
                });
                var currentCulture = System.Globalization.CultureInfo.CurrentUICulture.Name;
                var currentLanguageLabel = currentCulture.StartsWith("es", System.StringComparison.OrdinalIgnoreCase)
                    ? Localizer["ES - Espanyol"].Value
                    : currentCulture.StartsWith("en", System.StringComparison.OrdinalIgnoreCase)
                        ? Localizer["EN - English"].Value
                        : currentCulture.StartsWith("de", System.StringComparison.OrdinalIgnoreCase)
                            ? Localizer["DE - Deutsch"].Value
                            : currentCulture.StartsWith("fr", System.StringComparison.OrdinalIgnoreCase)
                                ? Localizer["FR - Français"].Value
                                : currentCulture.StartsWith("ru", System.StringComparison.OrdinalIgnoreCase)
                                    ? Localizer["RU - Русский"].Value
                                    : currentCulture.StartsWith("zh", System.StringComparison.OrdinalIgnoreCase)
                                        ? Localizer["ZH - 中文"].Value
                                        : Localizer["CA - Català"].Value;
            }
            <div class="d-flex align-items-center gap-3">
                <select class="form-select form-select-sm d-inline-block w-auto"
                        aria-label="@Localizer["Idioma"]"
                        onchange="if(this.value){window.location.href=this.value;}">
                    <option value="@caUrl" selected="@(currentCulture.StartsWith("ca", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["CA - Català"]</option>
                    <option value="@esUrl" selected="@(currentCulture.StartsWith("es", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["ES - Espanyol"]</option>
                    <option value="@enUrl" selected="@(currentCulture.StartsWith("en", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["EN - English"]</option>
                    <option value="@deUrl" selected="@(currentCulture.StartsWith("de", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["DE - Deutsch"]</option>
                    <option value="@frUrl" selected="@(currentCulture.StartsWith("fr", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["FR - Français"]</option>
                    <option value="@ruUrl" selected="@(currentCulture.StartsWith("ru", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["RU - Русский"]</option>
                    <option value="@zhUrl" selected="@(currentCulture.StartsWith("zh", System.StringComparison.OrdinalIgnoreCase) ? "selected" : null)">@Localizer["ZH - 中文"]</option>
                </select>
            </div>
        </div>
    </div>
    <div class="header-dept-bar py-3">
        <div class="container">
            <h1 class="h4 mb-0 font-weight-bold text-white">@Localizer["Departament d'Educació i Formació Professional"]</h1>
        </div>
    </div>


<div class="login-container">
    <div class="login-box">
        <div class="login-header"></div>

        <div class="login-body">
            <h1>@Localizer["Accés amb credencials corporatives"]</h1>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }

            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="email" class="form-label">
                        @Localizer["Usuari"]<span class="required">*</span>
                    </label>
                    <input type="email" class="form-control" id="email" name="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        @Localizer["Contrasenya"]<span class="required">*</span>
                    </label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <button type="submit" class="btn-login">
                    <i class="bi bi-lock-fill"></i>
                    @Localizer["Accedeix"]
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Footer amb copyright Generalitat -->
<footer class="login-footer">
    <div class="container text-center login-footer-container">
        <div class="text-muted small login-footer-muted">
            &copy; 2026 - <strong>@Localizer["Generalitat de Catalunya"]</strong> - @Localizer["Departament d'Educació i Formació Professional"]
        </div>
        <div class="text-muted small mt-1 login-footer-muted2">
            @Localizer["Tots els drets reservats"]
        </div>
    </div>
</footer>
</body>
</html>
