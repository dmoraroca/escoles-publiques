@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ca">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Accés - GICAR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body class="login-body">
    
    <!-- Header negre amb logo Gencat -->
    <div class="header-top-black login-header-black">
        <div class="container login-header-container">
            <div class="login-header-flex">
                <div>
                    <img src="https://educacio.gencat.cat/web/resources/fwkResponsive/fpca_capcalera/img/gencat-nuevo-completo-w.svg" 
                         alt="Generalitat de Catalunya" 
                         class="login-header-logo"
                         onerror="this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%22200%22 height=%2230%22%3E%3Ctext x=%2210%22 y=%2220%22 fill=%22white%22 font-family=%22Arial%22 font-size=%2216%22%3EGeneralitat%3C/text%3E%3C/svg%3E';">
                </div>
                <h5 class="login-header-title">
                    Departament d'Educació i Formació Professional
                </h5>
            </div>
        </div>
    </div>


<div class="login-container">
    <div class="login-box">
        <div class="login-header"></div>

        <div class="login-body">
            <h1>Accés amb credencials corporatives</h1>
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Error"]
                </div>
            }

            <form asp-controller="Auth" asp-action="Login" method="post">
                <div class="form-group">
                    <label for="email" class="form-label">
                        Usuari<span class="required">*</span>
                    </label>
                    <input type="email" class="form-control" id="email" name="email" required autofocus>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">
                        Password<span class="required">*</span>
                    </label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>

                <button type="submit" class="btn-login">
                    <i class="bi bi-lock-fill"></i>
                    Accedeix
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Footer amb copyright Generalitat -->
<footer class="login-footer">
    <div class="container text-center login-footer-container">
        <div class="text-muted small login-footer-muted">
            &copy; 2026 - <strong>Generalitat de Catalunya</strong> - Departament d'Educació i Formació Professional
        </div>
        <div class="text-muted small mt-1 login-footer-muted2">
            Tots els drets reservats
        </div>
    </div>
</footer>
</body>
</html>
