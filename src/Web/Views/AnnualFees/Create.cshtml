@model Web.Models.AnnualFeeViewModel

@{
    ViewData["Title"] = "Nova Quota Anual";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-cash-coin"></i> Nova Quota Anual</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label for="studentSelect" class="form-label">Alumne <span class="text-danger">*</span></label>
                            <select class="form-select" id="studentSelect" name="StudentId">
                                <option value="">-- Selecciona un alumne --</option>
                                @foreach(var student in ViewBag.Students)
                                {
                                    <option value="@student.Id" data-school="@student.SchoolName">
                                        @student.FirstName @student.LastName
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EnrollmentId" class="form-label">Inscripció <span class="text-danger">*</span></label>
                            <select asp-for="EnrollmentId" class="form-select" id="enrollmentSelect">
                                <option value="">-- Selecciona una inscripció --</option>
                                @foreach(var enrollment in ViewBag.Enrollments)
                                {
                                    <option value="@enrollment.Id" data-school="@enrollment.SchoolName" data-student-id="@enrollment.StudentId">
                                        @enrollment.StudentName - @enrollment.CourseName - @enrollment.AcademicYear
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="EnrollmentId" class="text-danger"></span>
                            <div class="mt-2">
                                <label class="form-label">Escola</label>
                                <input type="text" id="schoolReadonly" class="form-control" value="" readonly style="background-color: #e9ecef; color: #6c757d;" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Amount" class="form-label">Import <span class="text-danger">*</span></label>
                                <input asp-for="Amount" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Currency" class="form-label">Moneda</label>
                                <input asp-for="Currency" class="form-control" value="EUR" readonly />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label">Data de venciment <span class="text-danger">*</span></label>
                            <input asp-for="DueDate" type="date" class="form-control" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsPaid" type="checkbox" class="form-check-input" id="isPaidCheck" />
                            <label class="form-check-label" for="isPaidCheck">
                                Marcar com a pagada
                            </label>
                        </div>

                        <div class="mb-3" id="paymentRefGroup">
                            <label asp-for="PaymentRef" class="form-label">Referència de pagament</label>
                            <input asp-for="PaymentRef" class="form-control" placeholder="Referència o número de transacció" />
                            <span asp-validation-for="PaymentRef" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-lg"></i> Cancel·lar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Crear Quota
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/annualfees-create.js"></script>
    <script>
        const enrollmentSelect = document.getElementById('enrollmentSelect');
        const studentSelect = document.getElementById('studentSelect');
        const schoolInput = document.getElementById('schoolReadonly');

        // Filtrar inscripcions segons l'alumne seleccionat
        function filterEnrollmentsByStudent() {
            const selectedStudentId = studentSelect.value;
            for (let i = 0; i < enrollmentSelect.options.length; i++) {
                const opt = enrollmentSelect.options[i];
                if (opt.value === '') {
                    opt.style.display = '';
                    continue;
                }
                const studentId = opt.getAttribute('data-student-id');
                opt.style.display = (selectedStudentId === '' || studentId === selectedStudentId) ? '' : 'none';
            }
            // Si la inscripció seleccionada no és visible, deselecciona
            if (enrollmentSelect.selectedIndex > 0 && enrollmentSelect.options[enrollmentSelect.selectedIndex].style.display === 'none') {
                enrollmentSelect.selectedIndex = 0;
            }
        }

        function updateSchoolField() {
            const enrollmentSelected = enrollmentSelect.value !== '';
            if (enrollmentSelected) {
                // Si hi ha inscripció seleccionada, mostrar escola de la inscripció i readonly
                const selected = enrollmentSelect.options[enrollmentSelect.selectedIndex];
                const school = selected.getAttribute('data-school');
                schoolInput.value = school ? school : '';
                schoolInput.readOnly = true;
                schoolInput.style.backgroundColor = '#e9ecef';
                schoolInput.style.color = '#6c757d';
            } else {
                // Si NO hi ha inscripció seleccionada, mostrar escola de l'alumne i editable
                const selectedStudent = studentSelect.options[studentSelect.selectedIndex];
                const school = selectedStudent.getAttribute('data-school');
                schoolInput.value = school ? school : '';
                schoolInput.readOnly = false;
                schoolInput.style.backgroundColor = '';
                schoolInput.style.color = '';
            }
        }

        enrollmentSelect.addEventListener('change', updateSchoolField);
        studentSelect.addEventListener('change', function() {
            filterEnrollmentsByStudent();
            updateSchoolField();
        });

        // Inicialitzar el camp escola i el filtratge al carregar la pàgina
        document.addEventListener('DOMContentLoaded', function() {
            filterEnrollmentsByStudent();
            updateSchoolField();
        });
    </script>
}
