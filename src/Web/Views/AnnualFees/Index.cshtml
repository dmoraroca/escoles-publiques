@using Web.Helpers
@using Web.Models
@model IEnumerable<Web.Models.AnnualFeeViewModel>

@{
    ViewData["Title"] = Localizer["Quotes anuals"];
    
    var enrollments = ViewBag.Enrollments as List<Web.Models.EnrollmentViewModel> ?? new List<Web.Models.EnrollmentViewModel>();
    var enrollmentOptions = enrollments.Select(e => new Web.Models.SelectOption
    {
        Value = e.Id.ToString(),
        Text = $"{e.StudentName} - {e.AcademicYear}"
    }).ToList();
    var modalConfig = ModalConfigFactory.GetAnnualFeeModalConfig(enrollmentOptions);
    
    // Configuraci√≥ de la taula gen√®rica per quotes anuals
    var tableConfig = new TableViewModel<AnnualFeeViewModel>
    {
        Data = Model,
        EntityName = Localizer["Quotes Anuals"].Value,
        ControllerName = "AnnualFees",
        EmptyMessage = Localizer["No hi ha quotes anuals registrades."].Value,
        Columns = new List<ColumnConfig>
        {
            new ColumnConfig 
            { 
                PropertyName = "EnrollmentInfo", 
                DisplayName = Localizer["Inscripci√≥"].Value,
                IsSortable = true 
            },
            new ColumnConfig 
            { 
                PropertyName = "Amount", 
                DisplayName = Localizer["Import"].Value,
                IsSortable = true,
                CustomRender = (item) => 
                {
                    var fee = item as AnnualFeeViewModel;
                    return $"{fee?.Amount:N2} {fee?.Currency}";
                }
            },
            new ColumnConfig 
            { 
                PropertyName = "DueDate", 
                DisplayName = Localizer["Data venciment"].Value,
                Format = "dd/MM/yyyy",
                IsSortable = true 
            },
            new ColumnConfig 
            { 
                PropertyName = "PaidAt", 
                DisplayName = Localizer["Data pagament"].Value,
                IsSortable = true,
                CustomRender = (item) => 
                {
                    var fee = item as AnnualFeeViewModel;
                    if (fee?.PaidAt.HasValue == true)
                        return $"<span class=\"badge bg-success\">{fee.PaidAt.Value:dd/MM/yyyy}</span>";
                    return $"<span class=\"badge bg-warning\">{Localizer["Pendent"].Value}</span>";
                }
            },
            new ColumnConfig 
            { 
                PropertyName = "PaymentRef", 
                DisplayName = Localizer["Refer√®ncia"].Value,
                IsSortable = true,
                CustomRender = (item) => 
                {
                    var fee = item as AnnualFeeViewModel;
                    return string.IsNullOrEmpty(fee?.PaymentRef) 
                        ? "<span class=\"text-muted\">-</span>" 
                        : fee.PaymentRef;
                }
            }
        },
        Actions = new List<TableAction>
        {
            new TableAction 
            { 
                ActionName = "Details", 
                DisplayText = Localizer["Detalls"].Value,
                CssClass = "btn-info",
                Icon = "üëÅÔ∏è"
            },
            new TableAction 
            { 
                ActionName = "Delete", 
                DisplayText = Localizer["Esborrar"].Value,
                CssClass = "btn-danger",
                Icon = "üóëÔ∏è",
                RequiresConfirmation = true,
                ConfirmationMessage = Localizer["Est√†s segur que vols esborrar aquesta quota?"].Value
            }
        }
    };
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@Localizer["Quotes anuals"]</h2>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createAnnualFeeModal">
            <i class="bi bi-plus-lg"></i> @Localizer["Nova Quota"]
        </button>
    </div>

    <div class="card">
        <div class="card-body">
            @await Component.InvokeAsync("GenericTable", tableConfig)
        </div>
    </div>
</div>

@await Html.PartialAsync("_EntityModal", modalConfig)
