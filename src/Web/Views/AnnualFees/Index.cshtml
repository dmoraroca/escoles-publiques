@model IEnumerable<Web.Models.AnnualFeeViewModel>

@{
    ViewData["Title"] = "Quotes anuals";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quotes anuals</h2>
        <a asp-action="Create" class="btn btn-primary">Nova Quota</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Inscripció</th>
                        <th>Import</th>
                        <th>Data venciment</th>
                        <th>Data pagament</th>
                        <th>Referència</th>
                        <th>Accions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var fee in Model)
                    {
                        <tr>
                            <td>@fee.EnrollmentInfo</td>
                            <td>@fee.Amount.ToString("N2") @fee.Currency</td>
                            <td>@fee.DueDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (fee.PaidAt.HasValue)
                                {
                                    <span class="badge bg-success">@fee.PaidAt.Value.ToString("dd/MM/yyyy")</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Pendent</span>
                                }
                            </td>
                            <td>@(fee.PaymentRef ?? "-")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@fee.Id" class="btn btn-sm btn-info">Veure</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
