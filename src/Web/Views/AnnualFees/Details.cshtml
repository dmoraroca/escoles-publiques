@model Web.Models.AnnualFeeViewModel

@{
    ViewData["Title"] = Localizer["Detalls de la Quota"];
    var enrollments = ViewBag.Enrollments as IEnumerable<Web.Models.EnrollmentViewModel> ?? new List<Web.Models.EnrollmentViewModel>();
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-currency-euro"></i> @Localizer["Detalls de la Quota Anual"]</h2>
        <div id="viewButtons">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> @Localizer["Tornar"]
            </a>
            <button type="button" class="btn btn-warning" data-action="edit">
                <i class="bi bi-pencil"></i> @Localizer["Editar"]
            </button>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form id="editForm" asp-action="Edit" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div id="errorAlert" class="alert alert-danger alert-dismissible fade show alert-hidden" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> <span id="errorMessage">@Localizer["Si us plau, omple tots els camps obligatoris correctament."]</span>
                    <button type="button" class="btn-close" data-action="close-alert"></button>
                </div>
                
                <input type="hidden" name="EnrollmentId" value="@Model.EnrollmentId" />
                <input type="hidden" name="SchoolId" value="@Model.SchoolId" />
                <!-- Si vols afegir StudentId, descomenta la següent línia i assegura que el model el té -->
                
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">@Localizer["Nom alumne"]</label>
                        <input type="text" class="form-control bg-light" value="@Model.EnrollmentInfo.Split('-')[0].Trim()" readonly tabindex="-1" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">@Localizer["Nom inscripció o curs"]</label>
                        <input type="text" class="form-control bg-light" value="@((Model.EnrollmentInfo.Split('-').Length > 2 ? Model.EnrollmentInfo.Split('-')[1].Trim() : ""))" readonly tabindex="-1" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">@Localizer["Any acadèmic"]</label>
                        <input type="text" class="form-control bg-light" value="@((Model.EnrollmentInfo.Split('-').Length > 2 ? Model.EnrollmentInfo.Split('-')[2].Trim() : ""))" readonly tabindex="-1" />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">@Localizer["Nom escola"]</label>
                        <input type="text" class="form-control bg-light" value="@Model.SchoolName" readonly tabindex="-1" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@Localizer["Import"] <span class="text-danger edit-only">*</span></label>
                        <div class="input-group">
                            <input type="number" 
                                step="0.01"
                                id="Amount" 
                                name="Amount" 
                                class="form-control bg-light" 
                                value="@Model.Amount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)" 
                                readonly tabindex="-1" />
                            <span class="input-group-text bg-light" id="currencyDisplay">@Model.Currency</span>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@Localizer["Data de Venciment"] <span class="text-danger edit-only">*</span></label>
                        <input type="date" id="DueDate" name="DueDate" class="form-control bg-light" value="@Model.DueDate.ToString("yyyy-MM-dd")" readonly tabindex="-1" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@Localizer["Data de Pagament"]</label>
                        <input type="datetime-local" id="PaidAt" name="PaidAt" class="form-control bg-light" value="@(Model.PaidAt.HasValue ? Model.PaidAt.Value.ToString("yyyy-MM-ddTHH:mm") : "")" readonly tabindex="-1" />
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label">@Localizer["Referència de Pagament"]</label>
                        <input type="text" id="PaymentRef" name="PaymentRef" class="form-control bg-light" value="@(Model.PaymentRef ?? "")" readonly tabindex="-1" />
                    </div>
                </div>
                
                @{
                    var options = new[] { "Pendent", "Pagada" };
                    var html = "";
                    foreach (var opt in options)
                    {
                        var selected = Model.PaymentStatus == opt ? "selected" : "";
                        var display = Localizer[opt].Value;
                        html += $"<option value=\"{opt}\" {selected}>{display}</option>";
                    }
                }
                <div class="mb-3">
                    <label class="form-label">@Localizer["Estat"]</label>
                    <select id="Status" name="Status" class="form-select bg-light" disabled tabindex="-1">
                        @Html.Raw(html)
                    </select>
				</div>
				<input type="hidden" id="Currency" name="Currency" value="@Model.Currency" />

                <div id="editButtons" class="edit-buttons-hidden d-flex justify-content-end mt-4">
                    @{
                        var opts = new
                        {
                            submitText = Localizer["Guardar"].Value,
                            submitClass = "btn btn-success",
                            cancelText = Localizer["Cancel·lar"].Value,
                            cancelClass = "btn btn-secondary",
                            cancelAction = "reload",
                            privacySelector = "#AgreesToPrivacy",
                            disabledByDefault = true
                        };
                    }
                    <div class="save-cancel-wrapper" style="display:none;">
                        @await Html.PartialAsync("_SaveCancelButtons", System.Text.Json.JsonSerializer.Serialize(opts))
                    </div>
                </div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
    <script src="~/js/annualfees-details.js"></script>
}
