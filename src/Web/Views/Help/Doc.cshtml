@model Web.Controllers.HelpController.HelpDocViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h1 class="h3 mb-0">@Model.Title</h1>
        <div class="d-flex gap-2">
            <div class="btn-group" role="group" aria-label="@Localizer["Ajuda"]">
                <a class="btn btn-sm btn-outline-secondary" href="/ajuda/manual">@Localizer["Manual"]</a>
                <a class="btn btn-sm btn-outline-secondary" href="/ajuda/funcional">@Localizer["Funcional"]</a>
                <a class="btn btn-sm btn-outline-secondary" href="/ajuda/tecnic">@Localizer["TÃ¨cnic"]</a>
            </div>
            <a class="btn btn-sm btn-primary" href="@Model.DocxUrl">
                <i class="bi bi-file-earmark-word"></i> DOCX
            </a>
        </div>
    </div>

    <div class="help-doc">
        @Html.Raw(Model.Html)
    </div>
</div>

<style>
    .help-doc img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 1rem auto;
        border: 1px solid #e5e5e5;
        box-shadow: 0 1px 6px rgba(0,0,0,0.08);
        border-radius: 8px;
    }

    .help-doc h1, .help-doc h2, .help-doc h3 {
        scroll-margin-top: 110px;
    }

    .help-doc pre {
        padding: 0.75rem 1rem;
        background: #0b1020;
        color: #e7e7e7;
        border-radius: 8px;
        overflow-x: auto;
    }

    .help-doc code {
        background: rgba(0,0,0,0.06);
        padding: 0.1rem 0.25rem;
        border-radius: 4px;
    }

    .help-doc pre code {
        background: transparent;
        padding: 0;
    }
</style>
