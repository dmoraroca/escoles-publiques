    <h1 class="h3 mb-3">@ViewData["Title"]</h1>

    <div class="row g-3">
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Manual d'usuari</h2>
